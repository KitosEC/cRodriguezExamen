<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cRodriguezExamen.Resumen"
             >
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                  />
            <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                 </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
            </Grid>
            <Label x:Name="lblUsuario" Text="Usuario:" HorizontalTextAlignment="Start" Grid.Row="0" Grid.Column="0"/>
            <Label x:Name="lblclave" Text="Clave" HorizontalTextAlignment="Start" Grid.Row="1" Grid.Column="0" />
            <Entry x:Name="txtUser" Placeholder="Ingrese el usuario" HorizontalTextAlignment="Center" Grid.Row="0" Grid.Column="1"></Entry>
            <Entry x:Name="txtInClave" Placeholder="Ingrese la clave" Grid.Row="1" Grid.Column="1" ></Entry>

            <Button x:Name="btnAbrir" Text="INICIAR SESION" HorizontalOptions="Center" FontSize="18" FontAttributes="Bold"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>